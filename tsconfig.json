{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "lib",
    "sourceRoot": "lib",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "composite": true,
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*"]
}
